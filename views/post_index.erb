</head>
<body>
  <h2>Posts</h2>
  <ul>
    <% @posts.each do |post| %>
     
               <li><%= post.description %></li>
               <li>
                    <%= @posts %>
                    <form action="/posts/<%= post.id %>" method="POST">
                      <input type="hidden" name="_method" value="DELETE">
                      <button>Delete</button>
                    </form>
                </li>

    <% end %>
  </ul>
</body>
</html> 